%html.no-js{ :lang => "en" }
	%head
		%meta{ :charset => "utf-8" }/
		%title= data.page.title || "The Middleman"
		/ Drop in Bootstrap:
		= stylesheet_link_tag("//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css", :media => "all", :rel => "stylesheet" )
